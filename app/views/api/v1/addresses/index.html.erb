<p id="notice"><%= notice %></p>

<h1>Listing Addresses</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.town %></td>
        <td><%= link_to 'Show', api_address_path(address) %></td>
        <td><%= link_to 'Edit', edit_api_address_path(address) %></td>
        <td><%= link_to 'Destroy', api_address_path(address), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_api_address_path %>
