<p id="notice"><%= notice %></p>

<h1>Listing Stocks</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.capacity %></td>
        <td><%= link_to 'Show', api_stock_path(stock) %></td>
        <td><%= link_to 'Edit', edit_api_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', api_stock_path(stock), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stock', new_api_stock_path %>
