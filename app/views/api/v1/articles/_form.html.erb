<% if @resource.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
      <% @resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<p>
  <%= form.label :reference %>
  <%= form.text_field :reference %>
</p>

<p>
  <%= form.label :brand %>
  <%= form.collection_select(:brand_id, @brands, :id, :name, {:include_blank => true}) %>
</p>

<div>
  <% @suppliers.all.each do |supplier| %>
    <%= check_box_tag "article[supplier_ids][]", supplier.id, form.object.suppliers.include?(supplier) %>
    <%= supplier.name %>
  <% end %>
</div>

<p class='buttons'>
<%= form.submit %>
</p>
