<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |article| %>
      <tr>
        <td><%= article.reference %></td>
        <td><%= link_to 'Show', api_article_path(article) %></td>
        <td><%= link_to 'Edit', edit_api_article_path(article) %></td>
        <td><%= link_to 'Destroy', api_article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_api_article_path %>
