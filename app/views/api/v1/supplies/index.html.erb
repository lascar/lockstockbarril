<p id="notice"><%= notice %></p>

<h1>Supplies</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |supply| %>
      <tr>
        <td><%= supply.ref_supplier %></td>
        <td><%= supply.price %></td>
        <td><%= link_to 'Show', api_supply_path(supply) %></td>
        <td><%= link_to 'Edit', edit_api_supply_path(supply) %></td>
        <td><%= link_to 'Destroy', api_supply_path(supply), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Supply', new_api_supply_path %>
